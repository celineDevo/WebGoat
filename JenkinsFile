pipeline {
    agent any

    stages {
        stage("Clone WebGoat from Github") {
        steps {
            echo "'Cloning WebGoat from Github..."
            git url: 'https://github.com/celineDevo/WebGoat.git', branch: 'main'
        }
        
        }
        stage("Change Permissions") {
            steps {
                sh "chmod 777 ${WORKSPACE}/"
            }
        }
